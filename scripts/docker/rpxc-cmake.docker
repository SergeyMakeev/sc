FROM sdthirlwall/raspberry-pi-cross-compiler

# Update cmake
RUN ["curl", "https://cmake.org/files/v3.5/cmake-3.5.2-Linux-x86_64.tar.gz", "-o", "cmake.tar.gz"]
RUN ["tar", "xzf", "cmake.tar.gz", "--directory", "/opt"]
RUN ["ln", "-fs", "/opt/cmake-3.5.2-Linux-x86_64/bin/cmake", "/usr/bin/cmake"]
RUN ["rm", "cmake.tar.gz"]
